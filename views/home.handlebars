<style>
  table {
    border-spacing: 20px 0;
  }
  thead th {
    text-align: right;
  }
  tbody th {
    text-align: left;
  }
  tbody td {
    text-align: right;
  }
</style>
<div class="home {{mode}}">
<div id="signal">
<img src="/img/{{theme}}-{{mode}}.png"></br>
{{statsPast24Hours.time}}/{{statsNext24Hours.time}}
</div>
<h1>Spaced Repetition Flashcards</h1>
<table>
<thead>
<tr><th></th><th>Cards</th><th>Minutes</th></tr>
</thead>
<tbody>
<tr><th>Past 24 Hours:</th><td>{{statsPast24Hours.count}}</td><td>{{statsPast24Hours.time}}</tr>
<tr><th>Next 24 Hours:</th><td>{{statsNext24Hours.count}}</td><td>{{statsNext24Hours.time}}</tr>
<tr><td>&nbsp;</td></tr>
<tr><th>Daily Study Time (actual/target):</th><td>{{averageStudyTime}}/{{targetStudyTime}}</td></tr>
<tr><th>Percent correct:</th><td>{{percentCorrect}}%</td></tr>
<tr><th>Cards overdue:</th><td>{{overdue}}</td></tr>
<tr><th>Cards due now:</th><td>{{dueNow}}</td></tr>
<tr><th>New Cards (seen/remaining):</th><td>{{newCardsSeen}}/{{newCardsRemaining}}</td></tr>
<tr><th>Next card due in:</th><td>{{timeToNextDue}}</td></tr>
</tbody>
</table>
{{#if studyNow}}
<a href="/next" class="default_action shortcut_s"><button>Study</button></a>
{{else}}
<a href="/" class="default_action"><button>Reload</button></a>
{{/if}}
<h3>Study time per hour</h3>
<div id="chart1" style="width:500px;height:200px;"></div>
<div class="buttons">
<a href="/help" target="_blank"><button>Help</button></a>
<a href="/" class="shortcut_r"><button>reload</button></a>
<a href="/stats"><button>stats</button></a>
<a href="/fieldsets"><button>fieldsets</button></a>
<a href="/templatesets"><button>templatesets</button></a>
<a href="/templates"><button>templates</button></a>
</div>
</div>

<script src="https://cdn.plot.ly/plotly-latest.min.js" charset="utf-8"></script>
<script>
  let chart1 = document.getElementById('chart1');
  Plotly.newPlot(chart1,
    [ {{{chart1Data}}} ], {
      margin: {t: 0},
      yaxis: { title: 'minutes' },
      xaxis: { title: 'hour' }
    }
  );
</script>
